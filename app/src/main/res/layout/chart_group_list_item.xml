<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="chartGroup"
            type="com.aoc4456.radarchart.datasource.database.GroupWithLabelAndCharts" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="101dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <!-- チャート or アイコン-->
                <com.aoc4456.radarchart.component.chart.radarchart.BaseRadarChart
                    android:id="@+id/radarChart"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    app:chartType="group_list"/>

                <!-- タイトル -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:text="@{chartGroup.group.title}"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry"
                    tools:text="タイトル" />

                <!-- グループ内のチャートの数 -->
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@{Integer.toString(chartGroup.chartList.size())}"
                    android:textColor="@color/dark_gray"
                    android:textSize="24sp"
                    tools:text="3" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=">"
                    android:textColor="@color/dark_gray"
                    android:textSize="30dp"
                    tools:ignore="HardcodedText,SpUsage" />

            </LinearLayout>

            <!-- 罫線 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameForClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"/>
    </FrameLayout>


</layout>