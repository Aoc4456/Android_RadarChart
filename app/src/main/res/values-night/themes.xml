<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RepositoryTemplate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorOnPrimary">@color/gray_400</item>
        <!-- FABなど の色 -->
        <item name="colorSecondary">@color/blue_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- ステータスバーの色 -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_800</item>
        <!-- マルチタップ防止 -->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <!-- Action Bar が必要なActivity用 -->
    <style name="Theme.RepositoryTemplateWithActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>
</resources>