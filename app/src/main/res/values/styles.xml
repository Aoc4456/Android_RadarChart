<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- App Bar系 -->
    <style name="ToolBar">
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/toolbar_background</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/action_bar_text</item>
    </style>

    <style name="ToolBarImageButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:clickable">true</item>
        <item name="tint">@color/blue_light_700</item>
    </style>

    <style name="ToolBarTextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue_light_700</item>
        <item name="android:textSize" tools:ignore="SpUsage">16dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- テキスト系 -->
    <style name="LabelBlueText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_300</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>